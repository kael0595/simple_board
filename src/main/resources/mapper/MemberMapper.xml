<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.practice.simple_board.member.mapper.MemberMapper">

    <insert id="createMember" parameterType="com.practice.simple_board.member.vo.MemberVO">
        insert into member (member_id, password, name, phone, email, deleted, create_dt)
        values (#{memberId}, #{password}, #{name}, #{phone}, #{email}, false, now())
    </insert>

    <select id="login" parameterType="com.practice.simple_board.member.vo.MemberVO" resultType="int">
        select *
        from member
        where member_id = #{memberId}
          and password = #{password}
    </select>

    <select id="selectMemberById" parameterType="int" resultType="com.practice.simple_board.member.vo.MemberVO">
        select *
        from member
        where id = #{id}
    </select>

    <select id="selectMemberByMemberId" parameterType="com.practice.simple_board.member.vo.MemberVO"
            resultType="com.practice.simple_board.member.vo.MemberVO">
        select *
        from member
        where member_id = #{memberId}
    </select>

    <update id="memberUpdate" parameterType="com.practice.simple_board.member.vo.MemberVO">
        update member
        set password  = #{password},
            phone     = #{phone},
            email     = #{email},
            update_dt = now()
    </update>

    <update id="memberDelete" parameterType="com.practice.simple_board.member.vo.MemberVO">
        update member
        set deleted   = true,
            update_dt = now()
    </update>

</mapper>