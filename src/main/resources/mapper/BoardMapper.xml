<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.practice.simple_board.board.mapper.BoardMapper">

    <insert id="create" parameterType="com.practice.simple_board.board.vo.BoardVO">
        insert into board (title, content, author, create_dt)
        values (#{title}, #{content}, #{author}, now())
    </insert>

    <select id="selectAll" resultType="com.practice.simple_board.board.vo.BoardVO">
        select *
        from board
    </select>

</mapper>